/dts-v1/;

#include "thunderbay-soc.dtsi"

/ {
	model = "Intel Thunder Bay Hybrid HDDL Full Board";
	compatible = "intel,thunderbay";

	#address-cells = <2>;
	#size-cells = <2>;

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	memory@100A000000 {
		device_type = "memory";
		/* 8GB of DDR memory */
		reg = <0x10 0x0A000000 0x2 0x0>;
	};

	memory@1200000000 {
		device_type = "memory";
		/* 8GB of DDR memory */
		reg = <0x12 0x0 0x2 0x0>;
	};

	memory@1400000000 {
		device_type = "memory";
		/* 4GB of DDR memory */
		reg = <0x14 0x0 0x1 0x0>;
	};

	memory@1500000000 {
		device_type = "memory";
		/* 4GB of DDR memory */
		reg = <0x15 0x0 0x1 0x0>;
	};
};

&uart0 {
	status = "okay";
};
